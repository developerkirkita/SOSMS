<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PaddedRow">
        <item name="android:paddingLeft">@dimen/row_padding</item>
        <item name="android:paddingRight">@dimen/row_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FieldWithGlyph">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">@dimen/row_text_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/row_height_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">8.0dip</item>
    </style>
</resources>
